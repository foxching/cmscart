<%- include('./layouts/header.ejs') %>

<div class="row">
    <h1 class="page-header"><%= title %> </h1>
    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= product.id  %>/<%= product.image %>">
        <br>
    </div>
    <div class="col-xs-12 col-md-5">
        <p><%= product.desc %> </p>
        <p>$<%= parseFloat(product.price).toFixed(2) %> </p>
        <p><a href="/cart/add/<%= product.slug %> ">Add to Cart</a></p>
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image){ %>
                <% if(image !='thumbs') { %>
                    <li>
                        <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                            <img src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>">
                        </a>
                    </li>
                <% } %> 
            <% }) %> 
        </ul>
    </div>
</div>

<%- include('./layouts/footer.ejs')%>